{
  "root": true,
  "extends": "eslint-config-airbnb-base",
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "2017"
  },
  "rules": {
    "max-len": 0,
    "no-shadow": ["error", { "allow": ["cb", "err", "result"] }],
    "no-use-before-define": 0,
    "space-before-function-paren": 0,
    "func-names": 0,
    "vars-on-top": 0,
    "no-param-reassign": 0,
    "object-shorthand": 0,
    "global-require": 0,
    "prefer-destructuring": 0,
    "consistent-return": 0,
    "no-prototype-builtins": 0,
    "import/no-dynamic-require": 0
  }
}
